{
    "name": "ui",
    "version": "1.0.0",
    "license": "MIT",
    "scripts": {
        "typecheck": "yarn tsc",
        "build-electron": "yarn esbuild electron.ts --bundle --platform=node --sourcemap --external:electron --target=node10.4 --outfile=build/electron.js",
        "build-web": "yarn typecheck && yarn esbuild app.ts --loader:.ts=tsx --loader:.js=jsx --bundle --sourcemap --external:electron --outfile=build/web.js && cp index.html style.css build",
        "start-electron": "yarn build-web && yarn build-electron && yarn electron build/electron.js",
        "start": "yarn build-web && python3 -m http.server --directory build 8080",
        "format": "yarn prettier --write *.ts *.tsx"
    },
    "dependencies": {
        "chart.js": "^3.3.2",
        "electron": "^13.0.1",
        "esbuild": "^0.12.5",
        "lmdb-store": "^1.5.2",
        "papaparse": "^5.3.1",
        "react": "^17.0.2",
        "react-dom": "^17.0.2"
    },
    "devDependencies": {
        "@types/react": "^17.0.9",
        "@types/react-dom": "^17.0.6",
        "prettier": "^2.3.0",
        "typescript": "^4.3.2"
    }
}
